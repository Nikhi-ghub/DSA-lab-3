#include <stdio.h>
int main() {
    int arr[100]; 
    int n, i;

    printf("Enter the number of elements (1 to 100): ");
    scanf("%d", &n);

    if (n > 100 || n < 1) {
        printf("Error: Please enter a number between 1 and 100.\n");
        return 1; 
    }
    printf("Enter %d integers:\n", n);
    for(i = 0; i < n; i++) {
        printf("Element %d: ", i + 1);
        scanf("%d", &arr[i]);
    }
    printf("\nThe elements stored in the array are:\n");
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n"); 

    return 0;
}
